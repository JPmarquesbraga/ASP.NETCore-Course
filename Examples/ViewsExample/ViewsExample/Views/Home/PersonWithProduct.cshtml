@using ViewsExample.Models
@model PersonAndProductWrapperModel

<!DOCTYPE html>
<html>
    <head>
        <title>Person and Product</title>
        <meta charset="utf-8" />
        <link href="~/StyleSheet.css" rel="stylesheet" />
    </head>
    <body>
        <div class="page-content">
            <h1>Person and Product</h1>

            <div class="box w-100">
                <h3>Person</h3>
                <table class="table w-50">
                    <tbody>
                        <tr>
                            <td>PersonName</td>
                            <td>@Model.PersonData</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="box w-100">
                <h3>Product</h3>
                <table class="table w-50">
                    <tbody>
                        <tr>
                            <td>ProductName</td>
                            <td>@Model.ProductData.ProductId</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </body>
</html>
